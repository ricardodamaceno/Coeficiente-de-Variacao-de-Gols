package com.apostas.controller;

import java.util.ArrayList;
import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.servlet.ModelAndView;

import com.apostas.model.PesquisaTime;

@Controller
public class ApostaController {

	List<PesquisaTime> times = new ArrayList<>();

	@GetMapping("/add")
	public String adicionaNome() {

		return "add";
	}

	@PostMapping("/add")
	public String add(PesquisaTime time) {
		System.out.println("está funcionando add " + time.getNomeTime());

		times.add(new PesquisaTime(time.getNomeTime()));

		time.setUp();

		time.adicionaGols();

		time.tearDown();
		return "redirect:/resposta";
	}

//	@RequestMapping("/resposta")
//	public void resp() {
//		System.out.println("está funcionando resp");
//	}

	@GetMapping("/resposta")
	public ModelAndView resposta(PesquisaTime time) {

		ModelAndView mv = new ModelAndView("resposta");

		mv.addObject("times", times);
//		System.out.println(mv.getStatus().toString());
		

//		time.getNomeTime();
//		
//		time.setUp();
//		
//		time.adicionaGols();
//		
//		time.tearDown();
		return mv;
	}
	
	@PostMapping("/resposta")
	public String voltar() {
		
		return "redirect:/add";
	}
}
