package com.apostas.controller;

import java.util.ArrayList;
import java.util.List;

import org.springframework.http.HttpStatus;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import com.apostas.model.PesquisaTime;

@Controller
public class ApostaController {

	List<PesquisaTime> times = new ArrayList<>();
	
	@GetMapping("/add")
	public String adicionaNome() {

		return "add";
	}

	@PostMapping("/add")
	public String add(PesquisaTime time) {
		System.out.println("est√° funcionando add " + time.getNomeTime());
		
		if(! time.getNomeTime().isEmpty()) {
			times.add(new PesquisaTime(time.getNomeTime()));

			time.setUp();

			time.adicionaGols();

			time.tearDown();
		}
		
		return "redirect:/resposta";
	}

	@GetMapping("/resposta")
	public ModelAndView resposta(PesquisaTime time) {

		ModelAndView mv = new ModelAndView("resposta");

		mv.addObject("times", times);
		
		return mv;
	}
	
	@RequestMapping("/voltar")
	public ModelAndView voltar() {
		
		ModelAndView mv = new ModelAndView("add");
		
		times.removeAll(times);
		return mv;
	}
}
